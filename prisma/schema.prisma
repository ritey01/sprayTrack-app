generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Paddock {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(255)
}

model Crops {
  id   Int    @id @default(autoincrement()) @db.UnsignedInt
  name String @db.VarChar(50)
}


model SprayList {
  id         Int                 @id @default(autoincrement())
  title      String
  sprayMix SprayMix[]
}

model SprayMix {
   id           Int                 @id @default(autoincrement())
   spray        String
   rate         Int
   unit         Unit
   sprayListId  Int
   spraylist    SprayList   @relation(fields: [sprayListId], references: [id], onDelete: Cascade)

   @@index([sprayListId])
}
   
enum Unit{
  Litres
  mls
  Kgs
  grams
}

model Sprays {
   id         Int                 @id @default(autoincrement())
   name       String
  
}



